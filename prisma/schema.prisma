// Adicione esta parte no seu arquivo schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

generator prisma_client_js {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  discordId String    @unique
  name      String
  Vote      Vote[]
  Comment   Comment[]
}

model Movie {
  id          String    @id @default(uuid())
  title       String
  totalPoints Int       @default(0)
  numVotes    Int       @default(0)
  Vote        Vote[]
  Comment     Comment[]
}

model Vote {
  id      String @id @default(uuid())
  value   Float
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  movieId String
  movie   Movie  @relation(fields: [movieId], references: [id])

  @@unique([userId, movieId])
}

model Comment {
  id      String @id @default(uuid())
  content String
  movieId String
  movie   Movie  @relation(fields: [movieId], references: [id])
  userId  String
  user    User   @relation(fields: [userId], references: [id])

  @@map("comments")
}
